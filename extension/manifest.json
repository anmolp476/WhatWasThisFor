{
  "manifest_version": 3,
  "name": "What Was This For?",
  "version": "1.0",
  "description": "An extension that helps you remember why you opened a tab!",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["scripting", "storage", "tabs"]
}
